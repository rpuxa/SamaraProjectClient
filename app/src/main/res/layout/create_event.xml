<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/grey"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:translationZ="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:weightSum="1.2">

                <EditText
                    android:id="@+id/newEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Название"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:translationZ="2dp" />

                <EditText
                    android:id="@+id/newEventShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Краткое описание"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:translationZ="2dp" />

                <EditText
                    android:id="@+id/newEventLongDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Полное описание"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:translationZ="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:translationZ="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/newEventDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Дата:"
                        android:textSize="18sp"
                        android:translationZ="2dp" />

                    <Button
                        android:id="@+id/newEventDateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Установить" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:translationZ="2dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Место проведения"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/newEventShowLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="Посмотреть" />

                        <Button
                            android:id="@+id/newEventChoseLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Выбрать..." />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:translationZ="2dp">


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Тип мероприятия:"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/newEventType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/newEventCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Цена"
                    android:inputType="textPersonName|numberDecimal"
                    android:padding="10dp"
                    android:translationZ="2dp" />

                <Button
                    android:id="@+id/createButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/rounded"
                    android:elevation="7dp"
                    android:text="Создать"
                    android:translationZ="2dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>